doctype html
html
 head
    title Register with Smartnotes
    meta(http-equiv='content-type', content='text/html; charset=utf-8')
    meta(name='description', content='')
    meta(name='keywords', content='')
    //link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,700,900', rel='stylesheet')
    link(rel='stylesheet', href='css/bootstrap.min.css')     
    script(src='js/jquery-1.11.1.min.js')
    //script(src='js/jquery.min.js')
    //script(src='js/jquery.dropotron.min.js')


 body
  .container(style='padding:10px;')
   center
    h2 Register an account for Smartnotes ! 
    if errors != null
      h3 #{errors}
    else        
      h3 You must enter a valid email to be registered. Once registered you will be directly redirected to Smarnotes and ready to start!
    br
    form(role='form', action="/register",method="post", style='max-width: 750px;')
      .input-group
          span#basic-addon1.input-group-addon @
          input.form-control(type='text', name="username", placeholder='Enter A Valid Email')
      br    
      .input-group
          span#basic-addon1.input-group-addon 
            span.glyphicon.glyphicon-lock
          input.form-control(type='password', name="password", placeholder='Password')
      br  
      button.btn-4(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn-4(type="button") Cancel 
   script(src='js/bootstrap.min.js')        