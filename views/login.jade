  body
   .container(style='padding:10px;')
    center
     h2 Login to smartnotes !
     br
     if errors != null
       h3 #{errors}
     form(role='form', action="/login",method="post", style='max-width: 750px;')
       .input-group
           span#basic-addon1.input-group-addon @
           input.form-control(type='text', name="username", placeholder='Enter Email')
       br    
       .input-group
           span#basic-addon1.input-group-addon 
             span.glyphicon.glyphicon-lock
           input.form-control(type='password', name="password", placeholder='Password')
       br  
       button.btn-4(type='submit') Submit
       &nbsp; 
       a(href='/')
         button.btn-4(type="button") Cancel 
   script(src='js/bootstrap.min.js')         